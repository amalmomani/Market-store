@model Market_store.Models.Shop1

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10"> Stores </h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Dashboard"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:">Add store</a></li>
    </ul>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Shopname" class="control-label">Store Name</label>
                <input asp-for="Shopname" class="form-control" />
                <span asp-validation-for="Shopname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoryid" class="control-label">Store Category</label>
                <select asp-for="Categoryid" class="form-control" asp-items="ViewBag.Categoryid"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Image" class="control-label">Store Picture</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Store Picture</label>
                <input asp-for="ImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Totalsales" class="control-label"></label>
                <input asp-for="Totalsales" class="form-control" />
                <span asp-validation-for="Totalsales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monthlyrent" class="control-label">Store Monthly Rent</label>
                <input asp-for="Monthlyrent" class="form-control" />
                <span asp-validation-for="Monthlyrent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
            </div>
        </form>
    </div>
</div>
