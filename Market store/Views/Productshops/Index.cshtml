@model IEnumerable<Market_store.Models.Productshop>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<div class="col-md-12">
    <div class="page-header-title">
        <h5 class="m-b-10"> Manage store's products </h5>
    </div>
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Dashboard/Dashboard"><i class="feather icon-home"></i></a></li>
        <li class="breadcrumb-item"><a href="javascript:"> Products || stores </a></li>
    </ul>
</div>
<hr />
<div class="panel panel-default">
    <p>
        <a asp-action="Create" class="btn btn-primary" style="margin-left: 20px; margin-right: 20px ">Assign product to specific Store </a>
    </p>

    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive table-bordered">
            <table class="table" id="example">
                <thead>
                    <tr>
                        <th> Picture </th>
                        <th> Name</th>
                        <th> Price </th>
                        <th> Capital </th>
                        <th> Store </th>
                        <th>  </th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model)
                    {
                        @if (item != null)
                        {
                        <tr>
                            <td>
                                <img src=@Url.Content("~/Image/" + item.Product.Image) style="width:200px; height:250px; object-fit:contain" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Productname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Productvalue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shop.Shopname)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" style="font-size:15px; padding:5px"><i class="fa fa-edit "></i>Edit</a>
                                @*<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="font-size:15px; padding:5px"><i class="fa fa-pencil"></i>Delete</a>*@
                            </td>
                        </tr>
                            }
                        }

                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip',
            buttons: [
                
            ]
        });
    });
</script>